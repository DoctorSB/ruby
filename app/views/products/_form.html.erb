<%= form_with(model: product, local: true, class: "product-form-card") do |form| %>
  <% if product.errors.any? %>
    <div class="product-form-errors">
      <h3>Ошибки:</h3>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="product-form-group">
    <%= form.label :name, "Название", class: "product-form-label" %>
    <%= form.text_field :name, class: "product-form-input" %>
  </div>

  <div class="product-form-group">
    <%= form.label :description, "Описание", class: "product-form-label" %>
    <%= form.text_area :description, rows: 4, class: "product-form-input" %>
  </div>

  <div class="product-form-group">
    <%= form.label :price, "Цена (₽)", class: "product-form-label" %>
    <%= form.number_field :price, step: 0.01, class: "product-form-input" %>
  </div>

  <div class="product-form-group">
    <%= form.label :category, "Категория", class: "product-form-label" %>
    <%= form.select :category, options_for_select(['мокрый', 'сухой', 'вкусный', 'подходит людям'], product.category), {}, class: "product-form-select" %>
  </div>

  <%= form.submit "Сохранить", class: "product-form-submit" %>
<% end %>