<div class="admin-container">
  <h1>Управление категориями</h1>

  <div class="card">
    <div class="card-body">
      <h3>Создать новую категорию</h3>
      <%= render 'form', category: @category %>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <h3>Список категорий</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Название</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to 'Редактировать', edit_admin_category_path(category), class: 'btn btn-sm btn-outline-primary' %>
                <%= link_to 'Удалить', admin_category_path(category), method: :delete, 
                    data: { confirm: 'Вы уверены?' }, 
                    class: 'btn btn-sm btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>