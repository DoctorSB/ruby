<h1>Пользователи</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Роль</th>
      <th>Действие</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to "Изменить", edit_admin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
